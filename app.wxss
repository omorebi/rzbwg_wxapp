/**app.wxss**/
@import "./common_wxss/mengzhen.wxss";
@import './template/loading/loading.wxss';

/*
*字体主题颜色
*背景主题颜色
*/
page {
  font-family: "fontFamily";
  --font-theme-color: #7F2A17FF;
  --background-image: url('https://sapi.hnmuseum.com/hn_image/page_bgi.png');
  --user-background-image: url('https://sapi.hnmuseum.com/hn_image/user/user_bgi.png');
  --share-card-background-image: url('https://sapi.hnmuseum.com/hn_image/card_bgi.png');
  --loding-logo-image: url('https://sapi.hnmuseum.com/hn_image/loding-logo.png');
}

/* 搜索栏 */
.search-box {
  padding: 30rpx 0 40rpx 0;
  display: flex;
}

.search-bg {
  width: 100%;
  height: 68rpx;
  margin: 0 40rpx;
  border-radius: 34rpx;
  background-color: #EEEEEEFF;
  color: #AAAAAA;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}

.search-image {
  width: 34rpx;
  height: 34rpx;
  margin: 0 20rpx;
}

/* 缺省页 */
.nullBox {
  width: 100%;
  height: 460rpx;
  margin-top: 200rpx;
  font-size: 36rpx;
  text-align: center;
  color: #3d424b;
}

.nullBox image {
  width: 540rpx;
  height: 280rpx;
  margin: 0 aut0;
}

.nullTips {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 70rpx;
}

.nullBox .red_font {
  color: var(--font-theme-color);
}

/* 建设中 */
.building_box {
  text-align: center;
}

.building_box image {
  width: 640rpx;
  height: 530rpx;
  display: block;
  margin: 0 auto;
  margin-top: 200rpx;
}

.tips {
  margin-top: 67rpx;
  font-size: 36rpx;
  text-align: center;
  color: #3d424b;
}

/* 间隔 */
.common-line {
  width: 750rpx;
  height: 20rpx;
  background: #f5f5f5;
}

