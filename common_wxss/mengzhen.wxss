/* 刘梦真个人WXSS */

/*  固定在底部的评论框 */
.write_box {
  width: 750rpx;
  height: 178rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 99;
  flex-direction: row;
  justify-content: space-between;
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  box-shadow: -2rpx 2rpx 8rpx 9rpx rgba(0, 0, 0, 0.1);
}

.write_box .input-box {
  width: 525rpx;
  height: 63rpx;
  line-height: 63rpx;
  background-color: #EEF0F2;
  border-radius: 32rpx;
  display: flex;
  flex-direction: row;
  margin-top: 4rpx;
  align-items: center;
  font-size: 28rpx;
}

.comment_input {
  margin-left: 8rpx;
}

.placeholder {
  font-size: 24rpx;
  color: #707070;
}

/* 工具栏 */
.tools_box {
  /* width: 130rpx; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.btn_box {
  width: 65rpx;
  text-align: center;
}

.btn_box image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 2rpx;
}

.num {
  font-size: 20rpx;
  color: #a1a1a1;
}

/* 留言评论 */
.comment_box {
  width: 670rpx;
  margin: 30rpx auto;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 0 40rpx;
  box-shadow: 0px 2rpx 16rpx 0px rgba(117, 53, 52, 0.19);
}

.comment_box_title {
  width: 100%;
  box-sizing: border-box;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  font-weight: 500;
}

.comment_num {
  font-size: 28rpx;
  color: #848484;
}

/* 评论box */
.comment_item {
  display: flex;
  flex-direction: row;
}

.avatar image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.comment_content {
  width: 540rpx;
  margin-left: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #F5F5F5;
  margin-bottom: 20rpx;
}

.comment_content .name {
  font-size: 32rpx;
  color: #393939;
  font-weight: 400;
}

.date {
  font-size: 24rpx;
  color: #848484FF;
  height: 50rpx;
  line-height: 50rpx;
}

.comment_info {
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  display: -webkit-box !important;
  -webkit-line-clamp: 3 !important;
  -webkit-box-orient: vertical !important;
  font-size: 30rpx;
  color: #393939;
}

.look_more {
  text-align: center;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #848484;
  padding-bottom: 20rpx;
}


/* TAB选项卡 */
.swiper-tab {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: transparent;
  white-space: nowrap;
  padding: 0 20rpx;
  box-sizing: border-box;
  /* display: flex;
  flex-direction: row;
  justify-content: space-around; */
}

.swiper-tab-list {
  min-width: 70rpx;
  display: inline-block !important;
  padding: 0 20rpx;
  text-align: center;
  position: relative;
  font-size: 32rpx;
  font-weight: 400;
  color: #707070;

}

.on {
  font-size: 40rpx;
  font-weight: 400;
  color: #000000;
}

.title {
  position: relative;

}

.line {
  width: 53rpx;
  height: 8rpx;
  background-color: var(--font-theme-color);
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: block;
}

.none {
  display: none;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin-top: 80rpx;
  background-color: #F6F6F6;
}

/* 没有更多了 */
.not-more {
  display: block;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 5rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #8f8f8f;
  margin-top: 30rpx;
  box-sizing: border-box;
}


/* 授权手机号弹窗 */
.phone-Md {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .4)
}

.md-Box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 532rpx;
  background: #ffffff;
  border-radius: 10rpx;
  text-align: center;
  transform: translate(-50%, -50%);
}

.titles {
  font-size: 34rpx;
  line-height: 84rpx;
}

.login-content {
  border-top: 1px solid rgba(156, 156, 156, .18);
  border-bottom: 1px solid rgba(156, 156, 156, .18);
  padding: 0 60rpx;
}

.login-content .imgs {
  margin: 40rpx 0;
}

.imgs image {
  width: 94rpx;
  height: 94rpx;
  display: block;
  margin: 0 auto;
}

.login-content .a {
  font-size: 30rpx;
  border-bottom: 1px solid rgba(156, 156, 156, .18);
  padding-bottom: 35rpx;
}

.login-content .b {
  font-size: 28rpx;
  padding-top: 30rpx;
  padding-bottom: 70rpx;
  color: #787878;
}

.btn-box {
  overflow: hidden;
}

.btn-box .btns {
  float: left;
  width: calc(50% - 1px);
  line-height: 92rpx;
}

.btn-box button.btns {
  background: #ffffff;
  border: 0;
  color: var(--font-theme-color);
  border-left: 1px solid rgba(156, 156, 156, .18);
  border-radius: 0;
}

.btn-box button.btns::after {
  border: none;
  border-radius: 0;
}
