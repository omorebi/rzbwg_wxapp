.slider {
  position: relative;
}

.slider__progress {
  position: absolute; 
}

.slider__line {
  position: absolute; 
}


.block__bg {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  position: absolute; 
}
.biger_block{
  display: flex;
  flex-direction: row;
  padding: 0 10rpx;
  color: #fff;
  background-color: #992E2D;
  font-size: 24rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 50%;
  box-sizing: border-box;
}