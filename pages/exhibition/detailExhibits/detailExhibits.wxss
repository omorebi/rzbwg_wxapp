/* pages/exhibition/detailExhibits/detailExhibits.wxss */
page {
    background-color: #FFFFFF;
    letter-spacing: 2rpx;
}

/* 轮播图 */
.banner {
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 613rpx;
    overflow: hidden;
}

.banner_box {
    position: relative;
    width: 750rpx;
    height: 613rpx;
}

.swiper_item image {
    width: 750rpx;
    height: 613rpx;
}

/* 轮播图数量 */
.swiper_num {
    font-size: 32rpx;
    height: 44rpx;
    line-height: 44rpx;
    padding: 5rpx 15rpx;
    border-radius: 7rpx;
    color: #fff;
    background-color: #979797FF;
    opacity: 0.7;
    position: absolute;
    bottom: 30rpx;
    right: 32rpx;
}

.swiper_num text {
    padding: 0 4rpx;
}


/* 音频进度条 */
.progress_box {
    width: 750rpx;
    height: 40rpx;
    position: absolute;
    left: 0;
    top: 610rpx;
    z-index: 9;
}

/* 灰条 */
.progress_box_bj {
    width: 750rpx;
    height: 8rpx;
    background: #AEAEAE;
    opacity: 0.8;
    border-radius: 2rpx;
    position: relative;
}

.progress_box .progress_box_bj .progress_view {
    height: 100%;
    background-color: var(--font-theme-color);
    position: absolute;
    top: 0;
    left: 0;
}

.progress_box .movable__area {
    width: 100%;
    position: absolute;
    height: 30rpx;
    top: -8rpx;
}

.progress_box .movable__area .movable__view {
    width: 150rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    box-shadow: 0px 2rpx 18rpx 2rpx rgba(164, 34, 41, 0.19);
    font-size: 20rpx;
    color: #fcfcfd;
    border-radius: 30rpx;
    background-color: var(--font-theme-color);
    padding: 0 10rpx;
}


/* 重要的盒子 */
.info_container {
    position: absolute;
    top: 615rpx;
    left: 0;
    width: 750rpx;
    padding-bottom: 180rpx;
}

/* 工具栏 */
.header_tools_box {
    height: 160rpx;
    background-color: #fff;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
/* 视频按钮 */
.video_play {
    width: 63rpx;
    height: 50rpx;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}
.header_tools_box .tools_btn {
    height: 69rpx;
    line-height: 69rpx;
    display: flex;
    flex-direction: row;
}

.play_btn {
    width: 55rpx;
    height: 69rpx;
    margin: 0 90rpx;
}

.play_btn image {
    width: 55rpx;
    height: 69rpx;
}

.previous_btn,
.next_btn {
    width: 50rpx;
    height: 50rpx;
    margin: auto 0;
}


/* 手语解读+ 三维环视 */
.public_box {

    height: 547rpx;
    margin: 0 auto;
    background-color: #fff;
    box-sizing: border-box;

    overflow: hidden;
    padding-bottom: 40rpx;

    padding: 40rpx 35rpx;
}

/* 标题 */
.public_box_title {
    font-size: 40rpx;
    color: #000000;
    font-weight: 400;
}

/* 内容 */
.public_box_content {
    width: 100%;
    height: 385rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 20rpx;
    position: relative;
}

.public_box_content .bigImg {
    width: 100%;
    height: 100%;
}

.small_icon {
    width: 52rpx;
    height: 52rpx;
    position: absolute;
    top: 24rpx;
    right: 24rpx;
}

.mb30 {
    margin-bottom: 30rpx;
}


/* 介绍部分 */
.introduce_box {
    width: 100%;
    box-sizing: border-box;
    position: relative;
    margin-bottom: 0rpx;
    /* margin: 30rpx auto; */
}

.main_box {
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    overflow: hidden;
    padding-bottom: 40rpx;
}

.content {
    padding: 40rpx 35rpx;
}

.content_nav {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

/* 标题 */
.title {
    max-width: 400rpx;
    font-size: 40rpx;
    color: #212120;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 收藏分享box */
.collection_share {
    width: 200rpx;
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
}

.collection_share_item {
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
    flex-direction: row;
    margin-top: 6rpx;
}

.collection_share_item image {
    width: 36rpx;
    height: 36rpx;
    margin: 0 5rpx;
}

.mr5 {
    margin-right: 5rpx;
}

/* 规格 */
.specifications {
    min-height: 36rpx;
    color: #707070;
    font-size: 28rpx;
    line-height: 45rpx;
    letter-spacing: 1rpx;
    margin: 20rpx 0;
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    position: relative;
}

.specifications_left {
    max-width: 480rpx;
}

.specifications_left view {
    font-size: 24rpx;
    font-weight: 400;
    text-align: left;
    color: #212120;
    line-height: 34rpx;
    letter-spacing: 1px;
}

.specifications_right {
    position: absolute;
    right: 10rpx;
    bottom: 0;
    color: var(--font-theme-color);
}

/* 详细介绍 */
/* .detail_info {
    text-indent: 2em;
  } */

.introduce_box .hide {
    height: 570rpx !important;
    overflow: hidden;
}

.arrow {
    width: 40rpx;
    height: 40rpx;
    margin-top: 40rpx;
}

.state {
    width: 750rpx;
    position: absolute;
    height: 110rpx;
    bottom: 0;
    z-index: 99;
    text-align: center;
    box-sizing: border-box !important;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.nofold {
    background: linear-gradient(-180deg, rgba(255, 255, 255, 0.8) 0, rgba(255, 255, 255, 1) 30%);
}

/* 精品文物 */
.nav_title {
    padding: 0 40rpx;
    width: 100%;
    box-sizing: border-box;
    /* background-color: pink; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 120rpx;
    line-height: 120rpx;
}

.nav_title .right {
    color: var(--font-theme-color);
}

.padding_add {
    padding: 0 80rpx;
}



/* 拓展阅读部分 */
.extended_reading_box .title {
    margin-bottom: 20rpx;
}

.extended_reading_box .hide {
    height: 493rpx !important;
    overflow: hidden;
}



/* 分享弹窗 */
.share_window_content {
    width: 750rpx;
    z-index: 101;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #fff;
    box-sizing: border-box;
    border-top-left-radius: 48rpx;
    border-top-right-radius: 48rpx;
    overflow: hidden;
}

.share_window_content .btn_box {
    height: 337rpx;
    width: 100%;
    display: flex;
    align-items: center;
}

.share_window_content .btn_box .share_btn {
    width: 50%;
    height: 375rpx;
    padding-top: 100rpx;
    box-sizing: border-box;
    color: #676767;
    background-color: #fff;
    padding-left: 0;
    padding-right: 0;
    line-height: normal;
    border-radius: 0;
    border-bottom: 1px solid #F2F2F2;
}

.share_window_content .btn_box .share_btn::after {
    border: none;
    border-radius: 0;
}

.share_window_content .btn_box .share_btn image {
    width: 95rpx;
    height: 95rpx;
    margin-bottom: 20rpx;
}

.window_content_btn {
    height: 130rpx;
    line-height: 130rpx;
    background-color: #fff;
    border-top: 1rpx solid #F2F2F2;
    color: #676767;
    text-align: center;
}

/* 语种选择器 */
.language_box {
    width: 177rpx;
    height: 58rpx;
    position: fixed;
    right: 13rpx;
    top: 1100rpx;
    color: #fff;
}

.english_box {
    width: 120rpx;
    height: 58rpx;
    line-height: 58rpx;
    opacity: 0.7;
    background: rgba(138,33,11,.7);
    border-radius: 7rpx 0px 0rpx 7rpx;
    text-align: center;
    font-size: 30rpx;
}
.chinese_box {
    width: 58rpx;
    height: 58rpx;
    line-height: 58rpx;
    border-radius: 50%;
    text-align: center;
    position: absolute;
    right: 29rpx;
    top: 0;
    background-color: #AD6354
}
.active {
    opacity: 1;
    background: #98171c;
}
