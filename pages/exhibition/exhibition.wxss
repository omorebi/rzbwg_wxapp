/* pages/exhibition/exhibition.wxss */
.container_box {
    position: relative;
}

/* 推荐展览部分 */
.recommend_box {
    width: 750rpx;
    height: 750rpx;
}

.recommend_box swiper-item {
    width: 750rpx;
    height: 700rpx;
}

.header_img {
    width: 750rpx;
    height: 640rpx;
}

.header_img image {
    width: 750rpx;
    height: 640rpx;
}

/* 推荐展览文字框 */
.recommend_content {
    width: 710rpx;
    height: 140rpx;
    padding: 27rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 5rpx 10rpx 10rpx #ECE5E5;
    position: absolute;
    left: 50%;
    top: 580rpx;
    transform: translateX(-50%);
    z-index: 9;
}

.content_item {
    display: flex;
    flex-direction: row;

}

.left_img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 30rpx;
}

.left_img image {
    width: 90rpx;
    height: 90rpx;
}

.right_content .title {
    font-size: 34rpx;
}

.right_content .show_time {
    color: #575D68;
    font-size: 28rpx;
    margin-top: 5rpx;
}


/* 自己写的指示点 */
.dots {
    margin-bottom: 23rpx;
    display: flex;
    justify-content: center;
    position: absolute;
    bottom: 0rpx;
    left: 50%;
    transform: translateX(-50%);
}

.dots .dot {
    margin: 0 5rpx;
    width: 11rpx;
    height: 11rpx;
    border-radius: 50%;
    background-color: #C79289;
    transition: all .6s;
}

.dots .dot.active {
    width: 20rpx;
    height: 11rpx;
    background-color: #8A210B;
    border-radius: 5px;
    opacity: 1;
}



/* 基本陈列部分 */
.nav_title {
    padding: 0 40rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 120rpx;
    line-height: 120rpx;
}

.nav_title .left {
    font-size: 34rpx;
    color: #000000;
    letter-spacing: 2rpx;
    font-weight: 400;
    padding-left: 6rpx;
}

.nav_title .left .nav_icon {
    margin-right: 10rpx;
    width: 23rpx;
    height: 24rpx;
    margin-bottom: 2rpx;
    vertical-align: middle;
}


.nav_title .right {
    color: #A1A1A1;
    font-size: 30rpx;
}

/* 虚拟博物馆  scroll-view 部分 */
.museum_scroll_box {
    width: 750rpx;
    display: flex;
    flex-direction: row !important;
    white-space: nowrap;
}

.museum_item {
    width: 658rpx;
    display: inline-block !important;
    margin-right: 18rpx;
    position: relative;
}
.round_img {
    width: 67rpx;
    height: 67rpx;
    position: absolute;
    top: 19rpx;
    left: 19rpx;
}
.museum_item .item_imgs image {
    width: 658rpx;
    height: 370rpx;
    border-radius: 12rpx;
}

.museum_item:first-child {
    margin-left: 20rpx;
}

.museum_name {
    height: 85rpx;
    line-height: 85rpx;
}

/* 临时展览  scroll-view 部分 */
.temporary_box {
    width: 750rpx;
    display: flex;
    flex-direction: row !important;
    white-space: nowrap;
    padding-bottom: 20rpx;
}

.temporary_item {
    width: 300rpx;
    height: 450rpx;
    display: inline-block !important;
    margin-right: 30rpx;
    position: relative;
}

.temporary_box .item_imgs image {
    width: 300rpx;
    height: 450rpx;
}

.temporary_item:first-child {
    margin-left: 20rpx;
}




/* 基本陈列 轮播图*/
.basic_box {
    width: 100%;
    margin-top: 10rpx;
    padding-bottom: 20rpx;
}

.carousel {
    width: 100%;
    height: 420rpx;
    margin: 0 auto;
}

.swiper_item {
    width: 580rpx !important;
}

.swiper_content_box {
    width: 580rpx !important;
    height: 420rpx !important;
    background-color: #ffffff;
}

.carousel .carousel_image {
    width: 580rpx;
    height: 290rpx;
}

.carousel .carousel_image image {
    width: 580rpx;
    height: 290rpx;
}

.carousel_name {
    padding-left: 6rpx;
    height: 80rpx;
    font-size: 34rpx;
    margin-top: 20rpx;
}

.address {
    color: #575D68;
    font-size: 28rpx;
    margin-top: 5rpx;
}

.carousel .quiet {
    transform: scale(0.8333333);
    transition: all 0.5s ease-in 0s;
}

.carousel .active {
    transform: none;
    transition: all 0.5s ease-in 0s;
}