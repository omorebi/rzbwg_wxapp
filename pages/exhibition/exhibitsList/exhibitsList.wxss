/* pages/exhibition/exhibitsList/exhibitsList.wxss */
/* 搜索栏 */
.search_box {
    width: 750rpx;
    height: 95rpx;
    background: #ededed;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search_bg {
    width: 703rpx;
    height: 63rpx;
    background: #ffffff;
    border-radius: 7rpx;
    color: #A3A3A3;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    font-weight: 500;
}

.search_image {
    width: 34rpx;
    height: 34rpx;
    margin: 0 20rpx;
}

/* 展品循环体 */
.exhibits_item {
    width: 700rpx;
    height: 195rpx;
    background: #ffffff;
    background-color: #FAF9F7;
    border-radius: 7rpx;
    box-shadow: 0px 3rpx 7rpx 0px rgba(35, 13, 3, 0.15);
    margin: 30rpx auto;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.exhibits_left {
    width: 138rpx;
    height: 136rpx;
    border-radius: 5rpx;
    margin-left: 30rpx;
}

.exhibits_left image {
    width: 138rpx;
    height: 136rpx;
    border-radius: 5rpx;
}

.exhibits_right {
    padding-left: 38rpx;
    width: 532rpx;
    height: 56rpx;
    line-height: 56rpx;
    box-sizing: border-box;
    background-color: rgba(255, 255, 255, .5);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.item_name {
    font-size: 30rpx;
    font-weight: 500;
    text-align: left;
    color: #232323;
    letter-spacing: 1rpx;
}

/* 播放按钮 */
.play_box {
    height: 100rpx;
    margin-right: 40rpx;
}

.play_btn {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
}

.canvas {
    position: relative;
    width: 56rpx;
    height: 56rpx;
    z-index: 99;
    box-sizing: border-box;
}

.play_btn .exhibition-item__infor {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    padding: 0 24rpx;
    width: calc(100% - 104rpx - 140rpx);
    height: 100%;
    box-sizing: border-box;
    border-right: 2rpx solid #d2d2d2;
}

.exhibition-item .exhibition-item__infor .item_name {
    width: 100%;
    font-size: 30rpx;
    font-weight: 600;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.exhibition-item .exhibition-item__infor .item_desc {
    width: 100%;
    font-size: 26rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    text-overflow: ellipsis;
    color: #666666;
    max-height: 70rpx;
}

.not-more {
    text-align: center;
    line-height: 80rpx;
    letter-spacing: 5rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #8f8f8f;
    margin-top: 30rpx;
    box-sizing: border-box;
}

.controll {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    background-color: #BA3F2F;
    transition: all 0.2s ease-in-out;
}

.controll::after {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-15%, -50%);
    content: '';
    width: 50rpx;
    border: 10rpx solid #fff;
    border-left-width: 20rpx;
    border-top-color: transparent;
    border-bottom-color: transparent;
    border-right-color: transparent;
    box-sizing: border-box;
    transition: all 0.2s ease-in-out;
}

.controll.active {
    background-color: transparent;
}

.controll.active::after {
    opacity: 0;
}










.timer {
    font-size: 19rpx;
    font-weight: 500;
    color: #a9a9a9;
    text-align: center;
}