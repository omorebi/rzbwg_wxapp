/* pages/index/museumInfo/museumInfo.wxss */
.container_box .heard_img {
    display: block;
    margin: 60rpx auto 0 auto;
    width: 710rpx;
    height: 400rpx;
    border-radius: 20rpx;
}

.text_box {
    padding: 34rpx;
    margin-top: 30rpx;
}

/* 轮播图 */
.banner_box {
    position: relative;
}
.carousel {
    width: 710rpx;
    height: 400rpx;
    margin: 0 auto;
    border-radius: 20rpx;
    overflow: hidden;
}

.swiper_item image {
    width: 710rpx;
    height: 400rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

/* 自己写的指示点 */
.dots {
    margin-bottom: 23rpx;
    display: flex;
    justify-content: center;
    position: absolute;
    bottom: 0rpx;
    left: 50%;
    transform: translateX(-50%);
}

.dots .dot {
    margin: 0 5rpx;
    width: 11rpx;
    height: 11rpx;
    border-radius: 50%;
    background-color: #FFFFFF;
    opacity: 0.7;
    transition: all .6s;
}

.dots .dot.active {
    width: 27rpx;
    height: 9rpx;
    background-color: #d32929;
    border-radius: 5px;
    opacity: 1;
}