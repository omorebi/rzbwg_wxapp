/* pages/selectVsenues/selectVsenues.wxss */
.img_box {
    width: 643rpx;
    height: 360rpx;
    border-radius: 20px;
    box-shadow: 0px 13rpx 59rpx 8rpx rgba(188, 188, 188, 0.4);
    margin: 70rpx auto 60rpx auto;
    position: relative;
}

.img_box image {
    width: 643rpx;
    height: 360rpx;
    position: absolute;
    left: 0;
    top: 0;
}
.vsenues_name {
    position: absolute;
    bottom: 10rpx;
    left: 50%;
    transform: translate(-50%);
    font-size: 36rpx;
    color: #fff;
    font-weight: 700;
}
/* 开馆时间 */
.des_info {
    padding: 0 60rpx;
}

.title {
    display: flex;
    flex-direction: row;
    font-size: 36rpx;
    font-weight: 500;
    text-align: left;
    color: #4d5367;
}

.timer_icon {
    width: 48rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.content {
    padding-top: 30rpx;
    font-size: 30rpx;
    font-weight: 400;
    text-align: left;
    color: #4d5367;
    line-height: 50rpx;
}
.content text {
    font-size: 32rpx;
    font-weight: 700;
}