/* pages/user/user.wxss */
page {
  background: linear-gradient(#fdfbfb 0%, #ebedee 100%);
}

.user_box {
  background: linear-gradient(#fdfbfb 0%, #ebedee 100%);
}

.header_box {
  height: 445rpx;
  position: relative;
  background-size: contain;
  background-color: transparent
  
}

.header_box .setting_btn {
  width: 44rpx;
  height: 41rpx;
  position: absolute;
  top: 50rpx;
  right: 65rpx;
}

/* 用户信息部分 */
.user_info {
  width: 100%;
  text-align: center;
  padding-top: 60rpx;
}

.user_info .avatar_img {
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.user_info .nickname {
  color: #323232;
  font-size: 52rpx;
  margin: 23rpx auto 33rpx auto;
}

.user_info .slogan {
  color: #373737;
  font-size: 24rpx;
}

/* 工具列表 */
.tools_box {
  background-color: #F2F2F0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.list_box {
  margin-bottom: 10rpx;
}

.list_box:last-of-type {
  margin-bottom: 0;
}

.line_box {
  padding: 0 40rpx;
  background-color: #fff;
}

.list_items {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #f5f5f4;
}

.list_box:last-of-type {
  border-bottom: none;
}

.no_border {
  border-bottom: none;
}

.list_items .left {
  color: #000000;
  font-size: 32rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  position: relative;
}

.list_items .left .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.list_items .left .badge {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: var(--font-theme-color);
  position: absolute;
  top: 40rpx;
  left: 34rpx;
}

.list_items .right {
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.list_items .right view {
  opacity: 0.9;
  font-size: 36rx;
  font-weight: bold;
  color: #dc4404;
}

.list_items .right image {
  width: 17rpx;
  height: 28rpx;
  margin-left: 24rpx;
}




/* 登录 */
.login_box {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.login_img {
  display: block;
  width: 400rpx;
  height: 157rpx;
  margin: 300rpx auto 110rpx auto;
}

.login-btn {
  width: 608rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: #04be02;
  border-radius: 49rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-top: 200rpx;
}