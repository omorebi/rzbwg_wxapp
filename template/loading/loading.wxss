/*加载中*/
.loadingMore {
  text-align: center;
  padding: 18rpx 0;
}

.loading-img {
  width: 50rpx;
  height: 50rpx;
}

.loading-text {
  margin-top: 8rpx;
  color: #666;
  font-size: 28rpx;
}

/*暂无数据*/
.nothing {
  padding: 150rpx 0;
  text-align: center;
}

.nothing .img {
  margin: 0 auto 32rpx;
}

.nothing .img image {
  width: 100%;
  height: 100%;
}

.nothing .text {
  font-size: 34rpx;
  line-height: 50rpx;
  color: rgba(53, 53, 53, 0.82);
}

/*默认*/
.nothing .img {
  width: 300rpx;
  height: 224rpx;
}

.nothing.no_zx .img,
.nothing.no_year .img,
.nothing.no_card .img,
.nothing.no_search .img {
  width: 500rpx !important;
  height: 500rpx !important;
}